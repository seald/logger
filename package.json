{
  "name": "@seald/logger",
  "version": "0.3.0",
  "description": "",
  "module": "src/index.js",
  "main": "lib/index.js",
  "types": "declaration.d.ts",
  "files": [
    "declaration.d.ts",
    "/lib/**",
    "/src/**",
    "!/*/*.spec.js",
    "!/*/spawnedTests/*"
  ],
  "publishConfig": {
    "registry": "https://nexus.tardis.seald.io/repository/npm-hosted"
  },
  "scripts": {
    "pretest": "npm run build && standard && npm run test-typings",
    "test": "mocha --require source-map-support/register --timeout 15000 \"./lib/**/*.spec.js\"",
    "test-typings": "ts-node test-typings.ts",
    "pretest-report": "npm run pretest",
    "test-report": "mocha --require source-map-support/register --reporter mocha-multi-reporters --reporter-options configFile=./mochaReportConfig.json \"./lib/**/*.spec.js\"",
    "prebuild": "rm -rf lib/",
    "build": "babel src --out-dir lib --source-maps",
    "prepare": "npm run build",
    "precoverage": "rm -rf coverage/",
    "coverage": "nyc npm run test-report"
  },
  "repository": {
    "type": "git",
    "url": "https://gitlab.tardis.seald.io/seald/logger.git"
  },
  "author": "Seald Team",
  "license": "UNLICENSED",
  "standard": {
    "ignore": [
      "lib/**"
    ]
  },
  "devDependencies": {
    "@babel/cli": "^7.8.4",
    "@babel/core": "^7.9.6",
    "@babel/preset-env": "^7.9.6",
    "@types/node": "^15.3.0",
    "chai": "^4.2.0",
    "chai-as-promised": "^7.1.1",
    "mocha": "^7.1.2",
    "mocha-junit-reporter": "^1.23.3",
    "mocha-multi-reporters": "^1.1.7",
    "mockdate": "^2.0.5",
    "nyc": "^15.0.1",
    "source-map-support": "^0.5.19",
    "standard": "^14.3.4",
    "ts-node": "^9.1.1",
    "typescript": "^4.2.4"
  },
  "dependencies": {
    "chalk": "^4.0.0"
  }
}
